<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="main.png">
         <run
               class="com.laex.cg2d.core.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.laex.cg2d.core.Perspective"
            fixed="true"
            icon="main.png"
            id="com.laex.cg2d.core.perspective"
            name="%Plugin.perspectiveName">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
       <view
             class="org.eclipse.ui.navigator.CommonNavigator"
             icon="main.png"
             id="com.laex.cg2d.comnav"
             name="Projects"
             restorable="true">
       </view>
	      <view
             allowMultiple="false"
             class="org.eclipse.ui.views.properties.PropertySheet"
             id="com.laex.cg2d.core.propertyView"
             name="Properties"
             restorable="true">
   		</view>
       <view
             class="org.eclipse.ui.internal.views.log.LogView"
             id="com.laex.cg2d.core.LogView"
             name="Log"
             restorable="true">
       </view>
   </extension>
   
   
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.laex.cg2d.core.application"
            name="Sloot Editor">
         <property
               name="aboutText"
               value="Sloot Editor">
         </property>
         <property
               name="windowImages"
               value="icons/logo16.png,icons/logo32.png,icons/logo48.png,icons/logo64.png,icons/logo128.png">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
         <property
               name="appName"
               value="Sloot Editor">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.laex.cg2d.comnav">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.laex.cg2d.comnav">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.laex.cg2d.core.wizards.CGWizard"
            name="%Plugin.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.laex.cg2d.core.splashHandlers.ExtensibleSplashHandler"
            id="com.laex.cg2d.core.splashHandlers.extensible">
      </splashHandler>
   </extension>
   <extension
         point="com.laex.cg2d.core.splashExtension">
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.laex.cg2d.core.perspective">
         <newWizardShortcut
               id="com.laex.cg2d.screeneditor.wizards.NewCGProjectWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.laex.cg2d.screeneditor.wizards.NewScreenWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.laex.cg2d.screeneditor.wizards.NewScriptWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.laex.cg2d.entityeditor.wizards.NewEntityWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.laex.cg2d.entityeditor.wizards.EntitiesFromSpritesheetWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="com.laex.cg2d.core.contribution1"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               icon="main.png"
               id="com.laex.cg2d.core.menu1"
               label="Sloot Editor"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="com.laex.cg2d.core.popup.actions.UploadToSpritesSlootAction"
               icon="icons/upload-cloud.png"
               id="com.laex.cg2d.core.UploadToSpritesLootAction"
               label="Upload to SpritesSloot"
               menubarPath="com.laex.cg2d.core.menu1/group1">
         </action>
         <action
               class="com.laex.cg2d.core.popup.actions.SlootProjectFixImagePaths"
               icon="icons/fix.png"
               id="com.laex.cg2d.core.FixEntitiesAction"
               label="Fix Absolute Paths"
               menubarPath="com.laex.cg2d.core.menu1/group1">
         </action>
      </objectContribution>
   </extension>
</plugin>
